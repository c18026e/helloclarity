pip install opensearch-py requests-aws4auth


# -----------------------------------------------------------------------------

# Free up PORTS

sudo lsof -i :PORT
sudo lsof -i :8501

sudo kill -9 PID



#  ------------------------------------------------------------------------------

#  Run the streamlit job in background as :

nohup streamlit run run_helloClarity.py & disown
or 
nohup streamlit run run_helloClarity.py > streamlit.log 2>&1 & disown
# -------------------------------------------------------------------

# Check your application running in background :
ps aux | grep streamlit


cd AI_project/helloclarity/TheApp
cd helloclarity
cd TheApp
nohup streamlit run run_helloClarity.py > streamlit.log 2>&1 & disown


# To stop the Application 
ps aux | grep streamlit


kill 5568
